<?xml version="1.0" encoding="utf-8"?>

<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    >

    <data>
        <variable name="deviceVM" type="eeg.useit.today.eegtoolkit.vm.StreamingDeviceViewModel" />
        <variable name="connectionVM" type="eeg.useit.today.eegtoolkit.vm.SensorGoodViewModel" />
    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="eeg.useit.today.eegtoolkit.sampleapp.DeviceDetailsActivity">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{`Status: ` + deviceVM.getConnectionState().name()}"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"/>


        <CheckBox
            android:id="@+id/connected0"
            android:layout_width="139dp"
            android:layout_height="50dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:checked='@{connectionVM.connected[0]}'
            android:clickable="false"
            android:text="Left Ear"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="8dp"/>

        <CheckBox
            android:id="@+id/connected1"
            android:layout_width="139dp"
            android:layout_height="50dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:text="Left Forehead"
            android:clickable="false"
            android:checked='@{connectionVM.connected[1]}'
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/connected0"
            android:layout_marginStart="8dp"/>

        <CheckBox
            android:id="@+id/connected2"
            android:layout_width="139dp"
            android:layout_height="50dp"
            android:text="Right Forehead"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:clickable="false"
            android:checked='@{connectionVM.connected[2]}'
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/connected1"
            android:layout_marginStart="8dp"/>

        <CheckBox
            android:id="@+id/connected3"
            android:layout_width="139dp"
            android:layout_height="50dp"
            android:text="Right Ear"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:clickable="false"
            android:checked='@{connectionVM.connected[3]}'
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/connected2"
            android:layout_marginStart="8dp"/>

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GraphGLView:"
            app:layout_constraintTop_toBottomOf="@+id/connected3"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="@+id/connected3"
            android:layout_marginStart="8dp"/>

        <eeg.useit.today.eegtoolkit.view.graph.GraphGLView
            android:id="@+id/graphGL"
            android:layout_width="395dp"
            android:layout_height="120dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView4"
            custom:durationSec="5"/>

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GraphSurfaceView:"
            app:layout_constraintTop_toBottomOf="@+id/graphGL"
            app:layout_constraintLeft_toLeftOf="@+id/textView4"/>

        <eeg.useit.today.eegtoolkit.view.graph.GraphSurfaceView
            android:id="@+id/graphSurface"
            android:layout_width="395dp"
            android:layout_height="120dp"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="@+id/graphGL"
            app:layout_constraintRight_toRightOf="@+id/graphGL"
            app:layout_constraintTop_toBottomOf="@+id/textView5"
            custom:durationSec="5"
            custom:lineColor="green"/>

    </android.support.constraint.ConstraintLayout>

</layout>